{
  "name": "@pendulum-baas/core",
  "version": "1.0.6",
  "description": "Pendulum BaaS backend server for local development",
  "files": [
    "compose.yaml",
    "app/Dockerfile",
    "events/Dockerfile",
    "app/dist/**/*",
    "events/dist/**/*",
    "app/ui/**/*",
    "package.json",
    "package-lock.json",
    ".dockerignore"
  ],
  "scripts": {
    "build:app": "cd app && tsc",
    "build:events": "cd events && tsc",
    "build:all": "npm run build:app && npm run build:events",
    "build": "tsc",
    "start:app": "node app/dist/src/server.js",
    "start:events": "node events/dist/src/server.js",
    "start": "concurrently \"npm run start:app\" \"npm run start:events\"",
    "clean": "rm -rf app/dist events/dist",
    "dev:app": "nodemon --watch 'app/src/**/*.ts' --exec 'ts-node' app/src/server.ts",
    "dev:events": "nodemon --watch 'events/src/**/*.ts' --exec 'ts-node' events/src/server.ts",
    "dev": "concurrently \"npm run dev:app\" \"npm run dev:events\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"

  },
    "keywords": [
    "baas",
    "backend-as-a-service",
    "self-hosted",
    "mongodb",
    "real-time",
    "reactive",
    "authentication",
    "rbac",
    "microservices",
    "docker",
    "express",
    "admin-dashboard"
  ],
  "author": "Pendulum Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pendulum-BaaS/pendulum-core.git"
  },
  "bugs": {
    "url": "https://github.com/Pendulum-BaaS/pendulum-core/issues"
  },
  "homepage": "https://github.com/Pendulum-BaaS/pendulum-core#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.17.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.12",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "jest": "^30.0.5",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
